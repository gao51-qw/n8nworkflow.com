# Supabase 配置
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# 网站配置
PUBLIC_SITE_URL=https://n8nworkflow.com
PUBLIC_SITE_NAME=N8N Workflows

# Google Analytics
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# API 配置
API_BASE_URL=https://n8nworkflow.com/api

# N8N API 配置（用于获取 demo 工作流）
N8N_API_URL=https://your-n8n-instance.com
N8N_API_KEY=your-n8n-api-key
N8N_DEMO_ENABLED=false

# GitHub Workflow Hub 配置
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=your_github_username
GITHUB_REPO=n8n-workflow-hub

# 功能开关
ENABLE_ANALYTICS=true
ENABLE_SEARCH=true

# ============================================================================
# P0 阶段改版配置 - Newsletter 服务
# ============================================================================
# Newsletter 服务选择 (mailchimp / sendgrid / manual)
NEWSLETTER_SERVICE=mailchimp

# Mailchimp 配置
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_LIST_ID=your_mailchimp_list_id
MAILCHIMP_AUDIENCE_ID=your_audience_id

# SendGrid 配置 (备选)
SENDGRID_API_KEY=your_sendgrid_api_key

# ============================================================================
# P0 阶段改版配置 - 工作流提交审核
# ============================================================================
# 提交审核相关配置
SUBMISSION_REVIEW_EMAIL=admin@example.com
SUBMISSION_APPROVAL_EMAIL=notifications@example.com
ENABLE_WORKFLOW_SUBMISSIONS=true

# 垃圾邮件检测 (Akismet)
AKISMET_API_KEY=your_akismet_api_key
AKISMET_BLOG_URL=https://n8nworkflow.com

# ============================================================================
# P0 阶段改版配置 - 图像处理和存储
# ============================================================================
# 工作流截图存储（cloudflare / s3 / local）
WORKFLOW_IMAGE_STORAGE=cloudflare

# Cloudflare 图像处理配置
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token
CLOUDFLARE_BUCKET_NAME=workflow-images

# AWS S3 配置 (备选)
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# ============================================================================
# P0 阶段改版配置 - 缓存和性能
# ============================================================================
# Redis 缓存 (可选,用于生产环境)
REDIS_URL=redis://localhost:6379

# 缓存配置 (秒为单位)
CACHE_TTL_FILTER_COUNTS=300
CACHE_TTL_WORKFLOWS=60
CACHE_TTL_WORKFLOW_DETAILS=600

# ============================================================================
# P0 阶段改版配置 - 功能开关
# ============================================================================
FEATURE_NEWSLETTER=true
FEATURE_SUBMIT_WORKFLOW=true
FEATURE_WORKFLOW_REVIEWS=false
FEATURE_WORKFLOW_COMMENTS=false
