---
/**
 * 主布局组件
 * 包含 Header 和 Footer，用于大多数页面
 */

import BaseLayout from './BaseLayout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import type { SEOMeta } from '../lib/types/workflow';

interface Props extends SEOMeta {
  class?: string;
  currentPath?: string;
}

const { class: className, currentPath, ...seoProps } = Astro.props;
---

<BaseLayout {...seoProps} class={className}>
  <div class="flex flex-col min-h-screen">
    <!-- Skip Link -->
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary-600 focus:text-white focus:rounded-lg focus:shadow-lg"
    >
      Skip to main content
    </a>

    <!-- Header -->
    <Header currentPath={currentPath || Astro.url.pathname} />

    <!-- Main Content -->
    <main id="main-content" class="flex-1 outline-none" tabindex="-1">
      <slot />
    </main>

    <!-- Footer -->
    <Footer />
  </div>
</BaseLayout>
