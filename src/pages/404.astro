---
import MainLayout from '@/layouts/MainLayout.astro';
import { getWorkflows } from '@/lib/services/workflows';

// 获取一些推荐的工作流
const { workflows: recommendedWorkflows } = await getWorkflows({
  limit: 3,
  offset: 0,
  sort: 'visitors-desc',
});

const title = '404 - 页面未找到';
const description = '抱歉，您访问的页面不存在。浏览我们的热门工作流或返回首页。';
---

<MainLayout title={title} description={description} noindex={true}>
  <div class="container mx-auto px-4 py-16">
    <!-- 错误信息 -->
    <div class="max-w-2xl mx-auto text-center mb-12">
      <div class="mb-8">
        <h1 class="text-9xl font-black text-primary-500 dark:text-primary-400 mb-4">
          404
        </h1>
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          页面未找到
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          抱歉，您访问的页面不存在或已被移除。
        </p>
      </div>

      <!-- 搜索框 -->
      <div class="mb-8">
        <form action="/search" method="get" class="max-w-md mx-auto">
          <div class="relative">
            <input
              type="search"
              name="q"
              placeholder="搜索工作流..."
              class="w-full px-4 py-3 pr-12 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary-500"
              aria-label="搜索工作流"
            />
            <button
              type="submit"
              class="absolute right-2 top-1/2 -translate-y-1/2 p-2 text-gray-500 hover:text-primary-500 dark:text-gray-400 dark:hover:text-primary-400"
              aria-label="搜索"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </button>
          </div>
        </form>
      </div>

      <!-- 快速链接 -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <a
          href="/"
          class="inline-flex items-center px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white font-medium rounded-lg transition-colors duration-200"
        >
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            ></path>
          </svg>
          返回首页
        </a>
        <a
          href="/categories"
          class="inline-flex items-center px-6 py-3 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-900 dark:text-white font-medium rounded-lg border border-gray-300 dark:border-gray-600 transition-colors duration-200"
        >
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
            ></path>
          </svg>
          浏览分类
        </a>
        <a
          href="/popular"
          class="inline-flex items-center px-6 py-3 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-900 dark:text-white font-medium rounded-lg border border-gray-300 dark:border-gray-600 transition-colors duration-200"
        >
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
          热门工作流
        </a>
      </div>
    </div>

    <!-- 推荐工作流 -->
    {
      recommendedWorkflows.length > 0 && (
        <div class="max-w-6xl mx-auto">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">
            推荐工作流
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {recommendedWorkflows.map((workflow) => (
              <a
                href={`/workflows/${workflow.slug}`}
                class="group block bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 hover:shadow-md transition-shadow duration-200"
              >
                <div class="aspect-video bg-gray-100 dark:bg-gray-700 overflow-hidden rounded-t-lg relative">
                  <img
                    src={workflow.thumbnail || '/images/placeholder-workflow.webp'}
                    alt={workflow.title}
                    class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
                <div class="p-4">
                  <h4 class="text-lg font-bold text-gray-900 dark:text-white mb-2 line-clamp-2">
                    {workflow.title}
                  </h4>
                  <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-2">
                    {workflow.description}
                  </p>
                </div>
              </a>
            ))}
          </div>
        </div>
      )
    }

    <!-- 帮助信息 -->
    <div class="max-w-2xl mx-auto mt-16 text-center">
      <p class="text-gray-600 dark:text-gray-400">
        如果您认为这是一个错误，请
        <a href="/about" class="text-primary-500 hover:text-primary-600 dark:text-primary-400 dark:hover:text-primary-300 underline">
          联系我们
        </a>
      </p>
    </div>
  </div>
</MainLayout>
