---
/**
 * 作者列表页
 * 展示所有工作流作者
 */

import MainLayout from '../../layouts/MainLayout.astro';
import AuthorCard from '../../components/ui/AuthorCard.astro';
import Breadcrumb from '../../components/ui/Breadcrumb.astro';
import { getAuthors } from '../../lib/services/authors';

// 获取所有作者
let authors = [];
try {
  authors = await getAuthors();
} catch (error) {
  console.error('Error fetching authors:', error);
}

// SEO 配置
const seoConfig = {
  title: 'Workflow Authors - N8N Workflows',
  description: 'Discover talented automation creators. Browse workflows from expert n8n users and automation enthusiasts.',
  canonical: '/authors',
};

// 面包屑导航
const breadcrumbItems = [
  { label: 'Authors' }
];
---

<MainLayout {...seoConfig}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb -->
    <Breadcrumb items={breadcrumbItems} />

    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-black text-gray-900 dark:text-white mb-3">
        Workflow Authors
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300">
        Meet the talented creators behind these automation workflows.
      </p>
    </div>

    <!-- Stats -->
    <div class="bg-primary-50 dark:bg-gray-800 rounded-lg p-6 mb-8">
      <div class="flex items-center gap-3">
        <svg class="w-8 h-8 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <div>
          <div class="text-2xl font-black text-gray-900 dark:text-white">
            {authors.length}+ Authors
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">
            Contributing to the n8n community
          </div>
        </div>
      </div>
    </div>

    <!-- Authors Grid -->
    {authors.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {authors.map((author) => (
          <AuthorCard author={author} />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
          No authors available
        </h3>
        <p class="text-gray-600 dark:text-gray-400">
          Authors will appear here once workflows are added.
        </p>
      </div>
    )}

    <!-- CTA Section -->
    <div class="mt-12 bg-gradient-to-r from-primary-50 to-secondary-50 dark:from-gray-800 dark:to-gray-800 rounded-lg p-8 text-center">
      <h2 class="text-2xl font-black text-gray-900 dark:text-white mb-3">
        Want to share your workflows?
      </h2>
      <p class="text-gray-600 dark:text-gray-300 mb-6">
        Join the n8n community and share your automation workflows with thousands of users.
      </p>
      <a
        href="https://n8n.io"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors"
      >
        Get Started with n8n
        <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</MainLayout>
