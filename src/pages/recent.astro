---
/**
 * 最新工作流页面
 * 按发布时间排序展示最新的工作流
 */

import MainLayout from '../layouts/MainLayout.astro';
import WorkflowGrid from '../components/workflow/WorkflowGrid.astro';
import Pagination from '../components/ui/Pagination.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';
import SortDropdown from '../components/ui/SortDropdown.astro';
import FilterBar from '../components/ui/FilterBar.astro';
import { getWorkflows } from '../lib/services/workflows';
import { getStats } from '../lib/services/stats';
import { formatLongDate } from '../lib/utils/date';
import { getCategories } from '../lib/services/categories';
import { generateRecentInsights } from '../lib/services/content-generator';
import type { Workflow } from '../lib/types/workflow';

export const prerender = false;

// 获取分页参数
const currentPage = Math.max(1, parseInt(Astro.url.searchParams.get('page') || '1', 10));
const categoryFilter = Astro.url.searchParams.get('category') || undefined;
const complexityFilter = Astro.url.searchParams.get('complexity') || undefined;
const priceFilter = Astro.url.searchParams.get('price') as 'free' | 'paid' | undefined;

const pageSize = 12;
const offset = (currentPage - 1) * pageSize;

// 获取最新工作流（按发布时间排序）
let workflows: Workflow[] = [];
let totalCount = 0;

try {
  const result = await getWorkflows({
    sort: 'date-desc',
    limit: pageSize,
    offset: offset,
    category: categoryFilter,
    complexity: complexityFilter,
    price: priceFilter,
  });
  workflows = result.workflows;
  totalCount = result.total;
} catch (error) {
  console.error('Error fetching recent workflows:', error);
}

// 构建基础 URL，保留现有的筛选参数（除了 page）
const baseUrlObj = new URL(Astro.url);
baseUrlObj.searchParams.delete('page');
const paginationBaseUrl = baseUrlObj.pathname + (baseUrlObj.search ? baseUrlObj.search : '');

// 获取分类用于筛选
let categories: any[] = [];
try {
  categories = await getCategories();
} catch (error) {
  console.error('Error fetching categories:', error);
}

// 获取最新洞察内容
let recentInsights = [
  {
    title: 'Fresh Ideas',
    description: 'Discover new automation approaches and innovative solutions.',
    stats: '50+ new monthly',
  },
  {
    title: 'Latest Trends',
    description: 'See what the community is building and sharing right now.',
    stats: '12+ per week',
  },
  {
    title: 'Growing Ecosystem',
    description: 'The N8N community expands rapidly with new contributors and workflows joining regularly.',
    stats: '1,000+ workflows',
  },
];

try {
  const generatedInsights = await generateRecentInsights();
  if (generatedInsights && generatedInsights.length > 0) {
    recentInsights = generatedInsights;
  }
} catch (error) {
  console.error('Error generating recent insights:', error);
}

// 获取统计数据
let stats: any = {
  totalWorkflows: 0,
  totalAuthors: 0,
  totalCategories: 0,
  totalDownloads: 0,
  recentWorkflows: 0,
  lastUpdatedAt: new Date().toISOString(),
};

try {
  const fetchedStats = await getStats();
  if (fetchedStats) {
    stats = fetchedStats;
    // 同步更新洞察内容中的统计数据
    recentInsights = [
      {
        title: 'Fresh Ideas',
        description: 'Discover new automation approaches and innovative solutions.',
        stats: `${stats.recentWorkflows}+ new monthly`,
      },
      {
        title: 'Latest Trends',
        description: 'See what the community is building and sharing right now.',
        stats: `${Math.ceil(stats.recentWorkflows / 4)}+ per week`,
      },
      {
        title: 'Growing Ecosystem',
        description: 'The N8N community expands rapidly with new contributors and workflows joining regularly.',
        stats: `${stats.totalWorkflows.toLocaleString()}+ workflows`,
      },
    ];
  }
} catch (error) {
  console.error('Error fetching stats:', error);
}

// SEO 配置
const seoConfig = {
  title: 'Recent Workflows - N8N Workflows',
  description: 'Browse the latest n8n automation workflows. Discover newly published workflows from the community.',
  canonical: '/recent',
};

// 面包屑导航
const breadcrumbItems = [
  { label: 'Recent Workflows' }
];

// 计算总页数
const totalPages = Math.ceil(totalCount / pageSize);
---

<MainLayout {...seoConfig}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb -->
    <Breadcrumb items={breadcrumbItems} />

    <!-- Page Header -->
    <div class="mb-8">
      <div class="flex items-start gap-4 mb-4">
        <div class="flex-shrink-0 w-16 h-16 flex items-center justify-center bg-gradient-to-br from-blue-400 to-indigo-600 rounded-lg shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="flex-1">
          <h1 class="text-3xl md:text-4xl font-black text-gray-900 dark:text-white mb-2">
            Recent Workflows
          </h1>
          <p class="text-lg text-gray-600 dark:text-gray-300">
            Explore the latest automation workflows published by the community.
          </p>
        </div>
      </div>

      <!-- Stats Banner -->
      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-800 rounded-lg p-6 border border-blue-200 dark:border-gray-700">
        <div class="flex items-center gap-3">
          <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
          </svg>
          <div>
            <div class="text-2xl font-black text-gray-900 dark:text-white">
              {totalCount} Recent Workflows
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400">
              Fresh automation ideas from the community
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <FilterBar 
      categories={categories} 
      currentCategory={categoryFilter}
      currentPrice={priceFilter || 'all'} 
      currentComplexity={complexityFilter || 'all'} 
    />

    <!-- Sort Bar -->
    <div class="flex items-center justify-between mb-6 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
      <div class="text-sm text-gray-600 dark:text-gray-400">
        Showing <strong class="text-gray-900 dark:text-white">{workflows.length}</strong> of <strong class="text-gray-900 dark:text-white">{totalCount}</strong> workflows
      </div>
      <SortDropdown currentSort="date-desc" />
    </div>

    <!-- Workflows Grid -->
    {workflows.length > 0 ? (
      <>
        <WorkflowGrid workflows={workflows} columns={3} />
        
        <!-- 分页 -->
        {totalPages > 1 && (
          <Pagination
            currentPage={currentPage}
            totalPages={totalPages}
            baseUrl={paginationBaseUrl}
          />
        )}
      </>
    ) : (
      <div class="text-center py-12">
        <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
          No workflows available
        </h3>
        <p class="text-gray-600 dark:text-gray-400">
          Recent workflows will appear here once they're added.
        </p>
      </div>
    )}

    <!-- Info Section -->
    <div class="mt-12 bg-primary-50 dark:bg-gray-800 rounded-lg p-8 border border-primary-200 dark:border-gray-700">
      <h2 class="text-2xl font-black text-gray-900 dark:text-white mb-4">
        Stay Updated with Latest Workflows (Last updated: {formatLongDate(stats.lastUpdatedAt || new Date())})
      </h2>
      <div class="grid md:grid-cols-3 gap-6 text-sm text-gray-600 dark:text-gray-300">
        {recentInsights.map((insight, index) => (
          <div>
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                {index === 0 && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />}
                {index === 1 && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />}
                {index === 2 && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />}
              </svg>
              <strong class="text-gray-900 dark:text-white">{insight.title}</strong>
            </div>
            <p>{insight.description}</p>
            <div class="text-xs text-primary-600 dark:text-primary-400 font-medium mt-1">{insight.stats}</div>
          </div>
        ))}
      </div>
      
      <div class="mt-6 pt-6 border-t border-primary-200 dark:border-gray-700">
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
          Want to stay updated? Check back regularly or explore other sections:
        </p>
        <div class="flex flex-wrap gap-3">
          <a
            href="/popular"
            class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-300 border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors"
          >
            Popular Workflows
          </a>
          <a
            href="/categories"
            class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-300 border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors"
          >
            Browse Categories
          </a>
          <a
            href="/authors"
            class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-300 border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors"
          >
            View Authors
          </a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
