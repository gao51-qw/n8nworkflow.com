---
/**
 * 排序下拉菜单组件
 * 用于工作流列表的排序功能
 */

interface Props {
  currentSort?: string;
}

const { currentSort = 'date-desc' } = Astro.props;

const sortOptions = [
  { value: 'date-desc', label: 'Newest First' },
  { value: 'date-asc', label: 'Oldest First' },
  { value: 'visitors-desc', label: 'Most Viewed' },
  { value: 'downloads-desc', label: 'Most Downloaded' },
  { value: 'title-asc', label: 'Title (A-Z)' },
  { value: 'title-desc', label: 'Title (Z-A)' },
];
---

<div class="flex items-center gap-2">
  <label for="sort-select" class="text-sm font-medium text-gray-700 dark:text-gray-300 whitespace-nowrap">
    Sort by:
  </label>
  <select
    id="sort-select"
    class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
    onchange="window.location.href = this.value"
  >
    {sortOptions.map((option) => (
      <option
        value={`?sort=${option.value}`}
        selected={currentSort === option.value}
      >
        {option.label}
      </option>
    ))}
  </select>
</div>
