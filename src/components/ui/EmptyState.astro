---
/**
 * 空状态组件
 * 用于显示无数据时的提示信息
 */

interface Props {
  title?: string;
  description?: string;
  icon?: 'search' | 'workflows' | 'filter';
  actionText?: string;
  actionHref?: string;
}

const {
  title = 'No results found',
  description = 'Try adjusting your search or filter to find what you\'re looking for.',
  icon = 'search',
  actionText,
  actionHref,
} = Astro.props;

const icons = {
  search: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />`,
  workflows: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />`,
  filter: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />`,
};
---

<div class="flex flex-col items-center justify-center py-16 px-4 text-center">
  <div class="w-20 h-20 mb-6 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
    <svg class="w-10 h-10 text-gray-400 dark:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <Fragment set:html={icons[icon]} />
    </svg>
  </div>
  
  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
    {title}
  </h3>
  
  <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-md">
    {description}
  </p>
  
  {actionText && actionHref && (
    <a
      href={actionHref}
      class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
    >
      {actionText}
    </a>
  )}
</div>
