import type { WorkflowDetailed, Workflow } from '../../lib/types/workflow';
import { Image } from 'astro:assets';
import { marked } from 'marked';

interface Props {
  workflow: WorkflowDetailed;
  relatedWorkflows?: Workflow[];
}

const { workflow, relatedWorkflows = [] } = Astro.props;

// Ê∏≤Êüì Markdown
const renderedDescription = workflow.overview?.description 
  ? await marked.parse(workflow.overview.description) 
  : '';

// ÊèêÂèñËäÇÁÇπÁ±ªÂûã
const nodeTypes = workflow.nodeDetails 
  ? [...new Set(workflow.nodeDetails.map(node => node.type.toLowerCase()))].slice(0, 8)
  : ['set', 'gmail', 'telegram', 'agent', 'google-gemini'];

// Ê†ºÂºèÂåñÊó•Êúü
const formatDate = (dateStr?: string) => {
  if (!dateStr) return 'Recently';
  try {
    const date = new Date(dateStr);
    return date.toLocaleDateString('en-GB', {
      day: '2-digit',
      month: 'short',
      year: 'numeric'
    });
  } catch (e) {
    return dateStr;
  }
};
---

<div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
  <!-- ‰∏ªÂÜÖÂÆπÂå∫ (8Âàó) -->
