---
/**
 * WorkflowDetailedView 组件
 * 路径: src/components/workflow/WorkflowDetailedView.astro
 * 
 * 用途: 展示工作流详情页的结构化内容（包括免责声明、概览、逻辑块、节点分析）
 * 优先级: P0
 * 
 * Props 接口:
 * - workflow: WorkflowDetailed - 完整的工作流详情对象
 * 
 * 特性:
 * - 分层展示: Disclaimer → Overview → LogicalBlocks → NodeDetails → Related
 * - 每个区域可独立展开/收起
 * - 固定浮动目录导航
 * - 打印友好
 * 
 * 布局: 2列（60%内容 + 40%侧边栏）
 */

import type { WorkflowDetailed } from '../../lib/types/workflow';

interface Props {
  workflow: WorkflowDetailed;
}

const { workflow } = Astro.props;

// 格式化日期
const formatDate = (dateStr?: string) => {
  if (!dateStr) return 'Recently';
  try {
    const date = new Date(dateStr);
    return date.toLocaleDateString('en-GB', {
      day: '2-digit',
      month: 'short',
      year: 'numeric'
    });
  } catch (e) {
    return dateStr;
  }
};
---

<div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
  <!-- 主内容区 (8列) -->
  <div class="lg:col-span-8 space-y-12">
    <!-- 免责声明区域 (如果存在) -->
    {
      workflow.disclaimer && (
        <section class="border-l-4 border-red-600 bg-red-50 dark:bg-red-900/20 p-4 rounded-r">
          <h2 class="text-sm font-bold text-red-900 dark:text-red-200 flex items-center gap-2 mb-2">
            <span>⚠️</span>
            <span>Disclaimer</span>
          </h2>
          <p class="text-sm text-red-800 dark:text-red-200">{workflow.disclaimer}</p>
        </section>
      )
    }

    <!-- 1. Workflow Overview 部分 -->
    {
      workflow.overview && (
        <section id="overview" class="prose dark:prose-invert max-w-none">
          <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed mb-6">
            {workflow.overview.description}
          </p>

          {workflow.overview.features && workflow.overview.features.length > 0 && (
            <ul class="space-y-2 list-none pl-0">
              {workflow.overview.features.map((feature) => (
                <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                  <span class="text-gray-400 mt-1">-</span>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
          )}
        </section>
      )
    }

    <!-- 2. Block-by-Block Analysis 部分 -->
    {
      workflow.nodeDetails && workflow.nodeDetails.length > 0 && (
        <section id="block-analysis" class="space-y-8 pt-8 border-t border-gray-200 dark:border-gray-700">
          <div class="flex items-center justify-between bg-white dark:bg-gray-800 p-4 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gray-100 dark:bg-gray-700 rounded-lg flex items-center justify-center font-bold text-gray-900 dark:text-white">M</div>
              <span class="font-bold text-gray-900 dark:text-white">Copy Markdown content to clipboard</span>
            </div>
            <button class="px-4 py-2 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg text-sm font-bold hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors">
              Copy Markdown
            </button>
          </div>

          <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-sm space-y-12">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white border-b border-gray-100 dark:border-gray-700 pb-4">
              {workflow.title}
            </h2>

            <div class="space-y-12">
              <div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">1. Workflow Overview</h3>
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                  {workflow.overview?.description}
                </p>
              </div>

              {workflow.logicalBlocks && workflow.logicalBlocks.length > 0 && (
                <div>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">2. Workflow Structure</h3>
                  <div class="space-y-4">
                    {workflow.logicalBlocks.map((block) => (
                      <div class="flex items-start gap-4 p-4 bg-gray-50 dark:bg-gray-900/50 rounded-xl border border-gray-100 dark:border-gray-800">
                        <span class="flex-shrink-0 w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                          {block.order}
                        </span>
                        <div>
                          <h4 class="font-bold text-gray-900 dark:text-white">{block.title}</h4>
                          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">{block.description}</p>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              )}

              <div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{workflow.logicalBlocks ? '3' : '2'}. Block-by-Block Analysis</h3>
                <div class="space-y-8">
                  {workflow.nodeDetails.map((node, index) => (
                    <div class="space-y-4">
                      <h4 class="text-lg font-bold text-gray-900 dark:text-white">
                        2.{index + 1} {node.name}
                      </h4>
                      
                      <div class="space-y-4 text-gray-700 dark:text-gray-300">
                        <ul class="list-none pl-0 space-y-4">
                          <li>
                            <strong class="text-gray-900 dark:text-white">Overview:</strong> {node.role}
                          </li>
                          {node.type && (
                            <li>
                              <strong class="text-gray-900 dark:text-white">Nodes Involved:</strong>
                              <ul class="list-disc pl-8 mt-2">
                                <li>{node.type}</li>
                              </ul>
                            </li>
                          )}
                          {node.configDescription && (
                            <li>
                              <strong class="text-gray-900 dark:text-white">Node Details:</strong>
                              <ul class="list-disc pl-8 mt-2">
                                <li>{node.configDescription}</li>
                              </ul>
                            </li>
                          )}
                        </ul>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </section>
      )
    }
  </div>

  <!-- 右侧边栏 (4列) -->
  <aside class="lg:col-span-4 space-y-8">
    <!-- 作者信息卡片 -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
      <div class="flex items-center gap-4 mb-6">
        <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center text-primary-700 font-bold text-2xl overflow-hidden">
          {workflow.author.avatar ? (
            <img src={workflow.author.avatar} alt={workflow.author.name} class="w-full h-full object-cover" />
          ) : (
            workflow.author.name.charAt(0)
          )}
        </div>
        <div>
          <a href={`/authors/${workflow.author.slug || workflow.author.name.toLowerCase()}`} class="text-lg font-bold text-gray-900 dark:text-white hover:text-primary-600 transition-colors">
            {workflow.author.name}
          </a>
          <p class="text-sm text-gray-500 dark:text-gray-400">30 workflows</p>
        </div>
      </div>
      
      <div class="space-y-6">
        <!-- Nodes -->
        <div>
          <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider mb-3">Nodes</h3>
          <div class="flex flex-wrap gap-2">
            {['set', 'gmail', 'telegram', 'agent', 'google-gemini'].map(node => (
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs font-medium rounded-full">
                {node}
              </span>
            ))}
          </div>
        </div>

        <!-- Categories -->
        <div>
          <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider mb-3">Categories</h3>
          <div class="flex flex-wrap gap-2">
            {workflow.categories?.map(cat => (
              <a href={`/categories/${cat.toLowerCase()}`} class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs font-medium rounded-full hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
                {cat}
              </a>
            ))}
          </div>
        </div>

        <!-- Complexity -->
        <div>
          <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider mb-3">Complexity</h3>
          <span class="px-3 py-1 bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 text-xs font-bold rounded-full uppercase">
            {workflow.complexityLevel}
          </span>
        </div>

        <!-- Stats -->
        <div class="pt-6 border-t border-gray-100 dark:border-gray-700 space-y-3">
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-500 dark:text-gray-400 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
              Published
            </span>
            <span class="font-medium text-gray-900 dark:text-white">{formatDate(workflow.publishedAt)}</span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-500 dark:text-gray-400 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
              Views
            </span>
            <span class="font-medium text-gray-900 dark:text-white">{workflow.visitors || 0}</span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-500 dark:text-gray-400 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>
              Likes
            </span>
            <span class="font-medium text-gray-900 dark:text-white">{workflow.likes || 0}</span>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-3 pt-4">
          <a href={workflow.sourceUrl || '#'} class="w-full py-3 px-4 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-xl font-bold text-center flex items-center justify-center gap-2 hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors">
            <span>View on n8n.io</span>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
          </a>
          <button class="w-full py-3 px-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-900 dark:text-white rounded-xl font-bold flex items-center justify-center gap-2 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
            <span>Download Workflow</span>
          </button>
        </div>
      </div>
    </div>

    <!-- Share CTA -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm text-center">
      <div class="w-12 h-12 bg-orange-50 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl">✨</div>
      <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Share Your Workflow</h3>
      <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">Have a great workflow to share? Join the n8n Creator Hub and help the community!</p>
      <div class="space-y-3">
        <a href="#" class="block w-full py-2 px-4 bg-primary-600 text-white rounded-lg font-bold text-sm hover:bg-primary-700 transition-colors">Submit Your Template</a>
        <a href="#" class="block w-full py-2 px-4 text-gray-600 dark:text-gray-400 font-bold text-sm hover:text-gray-900 dark:hover:text-white transition-colors">How to Submit</a>
      </div>
    </div>

    <!-- Hire CTA -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 border border-gray-200 dark:border-gray-700 shadow-sm">
      <div class="flex items-center gap-4 mb-4">
        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center overflow-hidden">
          <img src="https://www.franckdunand.com/wp-content/uploads/2023/05/franck-dunand-avatar.png" alt="Franck Dunand" class="w-full h-full object-cover" />
        </div>
        <div>
          <h3 class="font-bold text-gray-900 dark:text-white">Franck Dunand</h3>
          <p class="text-xs text-gray-500 dark:text-gray-400">N8N Automation Expert</p>
        </div>
      </div>
      <p class="text-sm text-gray-600 dark:text-gray-400 mb-6">Specialized in N8N automation, I design custom workflows that connect your tools and automate your processes.</p>
      <button class="w-full py-3 px-4 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-xl font-bold text-sm hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors">Get Custom Workflow</button>
    </div>
  </aside>
</div>

<style>
  @media print {
    aside {
      display: none;
    }
  }
</style>
