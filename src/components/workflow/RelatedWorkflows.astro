---
/**
 * 相关工作流组件
 * 用于展示与当前工作流相关的其他工作流
 */

import WorkflowCard from './WorkflowCard.astro';
import type { Workflow } from '../../lib/types/workflow';

interface Props {
  workflows: Workflow[];
  title?: string;
}

const { workflows, title = 'Related Workflows' } = Astro.props;
---

{workflows.length > 0 && (
  <section class="mt-12">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl md:text-3xl font-black text-gray-900 dark:text-white">
        {title}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {workflows.slice(0, 3).map((workflow) => (
        <WorkflowCard workflow={workflow} />
      ))}
    </div>

    {workflows.length > 3 && (
      <div class="mt-6 text-center">
        <a
          href="/"
          class="inline-flex items-center text-sm font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 transition-colors"
        >
          View more workflows
          <svg class="ml-1 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    )}
  </section>
)}
