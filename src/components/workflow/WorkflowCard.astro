---
/**
 * 工作流卡片组件
 * 展示单个工作流的信息，包括缩略图、标题、描述、作者、分类和统计信息
 */

import type { Workflow } from '../../lib/types/workflow';
import { Image } from 'astro:assets';

interface Props {
  workflow: Workflow;
  lazy?: boolean;
}

const { workflow, lazy = true } = Astro.props;

// 格式化日期
const displayDate = workflow.date || new Date(workflow.publishedAt).toLocaleDateString('en-GB', {
  day: 'numeric',
  month: 'short',
  year: 'numeric',
});
---

<a href={`/workflows/${workflow.slug}`} class="group block h-full">
  <div class="flex flex-col bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-xl transition-all duration-300 h-full">
    <!-- 缩略图 -->
    <div class="aspect-video bg-gray-50 dark:bg-gray-900 overflow-hidden relative">
      <Image
        src={workflow.featuredImage || workflow.thumbnail || '/images/placeholder-workflow.svg'}
        alt={`Workflow preview: ${workflow.title}`}
        width={800}
        height={450}
        class="object-contain w-full h-full group-hover:scale-105 transition-transform duration-500"
        loading={lazy ? 'lazy' : 'eager'}
        decoding="async"
      />
      
      <!-- Badges -->
      <div class="absolute top-3 left-3 flex flex-wrap gap-2">
        <span class="px-2.5 py-1 bg-white/90 dark:bg-gray-900/90 backdrop-blur-sm text-[10px] font-bold uppercase tracking-wider rounded-lg shadow-sm text-primary-600">
          {workflow.price ? 'Paid' : 'Free'}
        </span>
        <span class="px-2.5 py-1 bg-white/90 dark:bg-gray-900/90 backdrop-blur-sm text-[10px] font-bold uppercase tracking-wider rounded-lg shadow-sm text-gray-600 dark:text-gray-400">
          {workflow.complexityLevel}
        </span>
      </div>
    </div>

    <!-- 内容区 -->
    <div class="p-5 flex flex-col flex-1">
      <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2 line-clamp-2 group-hover:text-primary-600 transition-colors">
        {workflow.title}
      </h3>
      
      <p class="text-sm text-gray-600 dark:text-gray-400 mb-6 line-clamp-2 flex-1">
        {workflow.description}
      </p>

      <!-- Author & Categories -->
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center gap-2">
          <div class="w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center text-[10px] font-bold text-primary-700 overflow-hidden">
            {workflow.author?.avatar ? (
              <Image 
                src={workflow.author.avatar} 
                alt={workflow.author.name} 
                width={24}
                height={24}
                class="w-full h-full object-cover" 
              />
            ) : (
              workflow.author?.name?.charAt(0) || 'A'
            )}
          </div>
          <span class="text-xs font-medium text-gray-700 dark:text-gray-300 truncate max-w-[100px]">
            {workflow.author?.name || 'Anonymous'}
          </span>
        </div>
        
        <div class="flex gap-1.5">
          {workflow.categories?.slice(0, 1).map((category) => (
            <span class="text-[10px] font-medium bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 px-2 py-0.5 rounded-md">
              {category}
            </span>
          ))}
        </div>
      </div>

      <!-- Stats -->
      <div class="flex items-center gap-4 pt-4 border-t border-gray-50 dark:border-gray-700 text-[11px] text-gray-600 dark:text-gray-400 font-medium">
        <div class="flex items-center gap-1">
          <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
          <span>{displayDate}</span>
        </div>
        <div class="flex items-center gap-1">
          <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
          <span>{workflow.visitors || 0}</span>
        </div>
        <div class="flex items-center gap-1 ml-auto">
          <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>
          <span>{workflow.likes || 0}</span>
        </div>
      </div>
    </div>
  </div>
</a>
