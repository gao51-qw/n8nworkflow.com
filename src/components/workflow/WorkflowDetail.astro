---
/**
 * 工作流详情展示组件 (基础版)
 * 用于展示单个工作流的基础信息
 */

import type { Workflow } from '../../lib/types/workflow';

interface Props {
  workflow: Workflow;
}

const { workflow } = Astro.props;
---

<div class="prose dark:prose-invert max-w-none">
  <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed mb-8">
    {workflow.description}
  </p>

  {workflow.nodes && (
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Workflow Details</h3>
      <ul class="space-y-2 text-gray-600 dark:text-gray-300 list-none pl-0">
        <li class="flex items-center gap-2">
          <span class="font-bold text-gray-900 dark:text-white">Number of nodes:</span>
          <span>{workflow.nodes}</span>
        </li>
        <li class="flex items-center gap-2">
          <span class="font-bold text-gray-900 dark:text-white">Complexity level:</span>
          <span class="capitalize">{workflow.complexityLevel}</span>
        </li>
        {workflow.version && (
          <li class="flex items-center gap-2">
            <span class="font-bold text-gray-900 dark:text-white">Compatible with n8n version:</span>
            <span>{workflow.version}</span>
          </li>
        )}
      </ul>
    </div>
  )}
</div>
