---
/**
 * Footer 页脚组件
 * 包含网站信息、快速链接和资源链接
 */

const currentYear = new Date().getFullYear();

// 快速链接
const quickLinks = [
  { label: 'Recent', href: '/' },
  { label: 'Categories', href: '/categories' },
  { label: 'Authors', href: '/authors' },
  { label: 'Complexity', href: '/complexity' },
  { label: 'About', href: '/about' },
];

// 资源链接
const resourceLinks = [
  { label: 'N8N Documentation', href: 'https://docs.n8n.io', external: true },
  { label: 'N8N Community', href: 'https://community.n8n.io', external: true },
  { label: 'Get Started with N8N', href: 'https://s.n8nworkflows.xyz/sYhvf', external: true },
  { label: 'Franck Dunand', href: 'https://www.franckdunand.com', external: true },
  { label: 'N8N Community Leaderboard', href: 'https://teds-tech-talks.github.io/n8n-community-leaderboard/', external: true },
];
---

<footer class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- 网站信息 -->
      <div class="col-span-1 lg:col-span-2">
        <a href="/" class="flex items-center space-x-2 mb-6 group">
          <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-primary-600 text-white font-bold text-lg group-hover:bg-primary-700 transition-colors">
            N
          </div>
          <span class="text-xl font-black text-gray-900 dark:text-white">
            N8N Workflows
          </span>
        </a>
        <p class="text-sm text-gray-500 dark:text-gray-400 mb-6 max-w-sm leading-relaxed">
          An organized collection of N8N automation workflows to accelerate your projects and optimize your processes.
        </p>
        <a href="https://www.franckdunand.com" target="_blank" rel="noopener noreferrer" class="text-sm font-bold text-gray-900 dark:text-white hover:text-primary-600 transition-colors">
          www.franckdunand.com
        </a>
      </div>

      <!-- 快速链接 -->
      <div>
        <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider mb-6">
          Quick Links
        </h3>
        <ul class="space-y-4">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary-600 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- 资源链接 -->
      <div>
        <h3 class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider mb-6">
          Resources
        </h3>
        <ul class="space-y-4">
          {resourceLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary-600 transition-colors inline-flex items-center"
                {...(link.external && {
                  target: '_blank',
                  rel: 'noopener noreferrer',
                })}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- 版权信息 -->
    <div class="mt-16 pt-8 border-t border-gray-100 dark:border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-400 dark:text-gray-500">
          © {currentYear} N8N Workflow Catalog.
        </p>
        <p class="text-xs text-gray-400 dark:text-gray-500 text-center md:text-right">
          N8N is a registered trademark of n8n.io. This site is not affiliated with n8n.io.
        </p>
      </div>
    </div>
  </div>
</footer>
