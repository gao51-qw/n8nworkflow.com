{
  "name": "n8nworkflows.xyz",
  "version": "1.0.1",
  "description": "N8N Workflows - A platform for discovering and sharing n8n automation workflows",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build && echo '--- Directory Content ---' && ls -la && echo '--- Dist Content ---' && ls -la dist",
    "preview": "astro preview",
    "deploy": "npm run build && wrangler deploy",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:unit": "jest --config jest.config.cjs --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "test": "npm run test:unit && npm run test:e2e",
    "test:ci": "npm run test:unit && npm run test:e2e -- --reporter=line",
    "test:env:setup": "docker-compose -f docker-compose.test.yml up -d",
    "test:env:teardown": "docker-compose -f docker-compose.test.yml down -v",
    "test:env:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "test:env:clean": "docker system prune -f",
    "test:data:generate": "node scripts/generate-test-data.mjs",
    "test:data:clean": "rm -rf test-data/ && mkdir -p test-data/",
    "test:clean": "npm run test:data:clean && rm -rf coverage/ test-results/ lighthouse-report.html"
  },
  "keywords": [
    "n8n",
    "workflows",
    "automation",
    "astro",
    "tailwindcss"
  ],
  "author": "N8N Workflows Team",
  "license": "MIT",
  "dependencies": {
    "@astrojs/rss": "^4.0.1",
    "@astrojs/sitemap": "^3.0.3",
    "@astrojs/tailwind": "^5.1.3",
    "@supabase/supabase-js": "^2.39.0",
    "astro": "^5.7.13",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lighthouse": "^13.0.1",
    "playwright": "^1.57.0",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.12.2",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3"
  }
}
